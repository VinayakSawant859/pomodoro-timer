{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420"
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "msi", "dmg"],
        "category": "Productivity",
        "copyright": "",
        "externalBin": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "longDescription": "",
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
        },
        "resources": [
            "../static/timer-start.wav",
            "../static/timer-stop.wav",
            "../static/timer-complete.wav",
            "../static/task-add.wav",
            "../static/task-delete-timer-reset.wav",
            "../static/5min-break-start.wav",
            "../static/5min-break-complete.wav",
            "../static/white-noise/boiler-ambient-noise.mp3",
            "../static/white-noise/Ambi-Val.mp3",
            "../static/white-noise/Cumulus-Clouds.mp3",
            "../static/white-noise/Natural-Sample-Makers.mp3",
            "../static/white-noise/Quantum-White.mp3",
            "../static/white-noise/Tranquil-White-Noise.mp3",
            "../static/brown-noise/chestnut.flac",
            "../static/brown-noise/dreamy.flac",
            "../static/brown-noise/eternity.flac",
            "../static/brown-noise/Maple.flac",
            "../static/brown-noise/Noise.flac",
            "../static/brown-noise/retreat.flac",
            "../static/pink-noise/Clouds-of-pink.flac",
            "../static/pink-noise/fable.flac",
            "../static/pink-noise/Flmaingo.flac",
            "../static/pink-noise/Pinkerton.flac",
            "../static/pink-noise/waterfall.flac",
            "../static/pink-noise/waves.flac"
        ],
        "shortDescription": "",
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "PomodoroTimer",
    "version": "1.0.0",
    "identifier": "com.vinayak.pomodoro-timer",
    "plugins": {
        "shell": {
            "open": true
        },
        "fs": {
            "requireLiteralLeadingDot": false
        },
        "updater": {
            "active": true
        }
    },
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Pomodoro Timer",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
        }
    }
}